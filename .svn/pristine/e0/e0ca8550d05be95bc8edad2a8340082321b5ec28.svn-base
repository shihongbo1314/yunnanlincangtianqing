body{
    margin: 0;
    padding: 0;
}
html,body{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
*{
    box-sizing: border-box;
}

/* 谷歌内核滚动条样式 */
::-webkit-scrollbar-thumb {
	background: rgba(126, 117, 117, 0.4);
	border-radius: 99px;
}

::-webkit-scrollbar-track {
	background: rgba(200, 200, 200, 0.2);
}

::-webkit-scrollbar {
	background: rgba(200, 200, 200, 0);
	width: 10px;
	height: 10px;
}
.autoStation{
    font-size: 14px;
}
.autoStation .val_wind>img{
    width: 20px;
}
.leaflet-pane.leaflet-overlay-pane .leaflet-canvas-icon-layer{
    z-index: 201;
}

/** 二级菜单样式 */
.secondMenu .el-dropdown-menu__item{
    font-size: 18px;
    padding: 10px 20px;
}

/** 未来24小时城市天气预报地质灾害弹出框 **/
.disPopover .footer{
    font-size: 14px;
}
.disPopover .footer p{
    margin-top: 20px;
}
.disPopover .footer ul{
    list-style: none;
    margin:0;
    padding:0;
}
.disPopover .footer ul li{
    padding: 10px 0;
}
.disPopover .footer ul li span{
    padding: 0 3px;
    font-weight: bold;
} 